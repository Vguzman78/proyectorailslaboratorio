<h1 class="h3 mb-2 text-gray-800 text-center">PROVEEDORES</h1>
<div>  
  <%= link_to new_supplier_path, {remote: true, class: "btn btn-outline-info btn-md", id: "anadir-proveedor-btn"}  do %>
    <span>Agregar Proveedor</span>
  <% end %>
</div>
<br />
    <div class="table-responsive">
    <table class="table table-bordered table-hover" id="tablaProveedores" width="100%" cellspacing="0">
        <thead class="thead-dark">
        <tr>
            <th>Nombre</th>
            <th>Dirección</th>
            <th>Teléfono</th>
            <th>Editar</th>
            <th>Eliminar</th>
        </tr>
        </thead>
        <tbody>
        <% @proveedores.each do |prov| %>
        <tr id="proveedor_<%= prov.id %>" >
            <td><%= prov.nombre %></td>
            <td><%= prov.direccion %></td>
            <td><%= prov.telefono %></td>
            <td>
            <%= link_to "editar", edit_supplier_path(prov), html_options = {class: "btn btn-outline-info btn-xs", remote: true} %>
            </td>
            <td>
            <%= link_to 'Borrar', prov, remote: true, method: :delete, data: { confirm: "¿Borrar proveedor: #{prov.nombre}?"}, class: "btn btn-outline-danger btn-xs" %>
            </td>
        </tr>
        <% end %>
        </tbody>
    </table>
    </div>
<%= render 'modal_proveedores' %>

