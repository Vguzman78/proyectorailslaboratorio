<%= form_with model: @profile do |f| %>
  <p class="font-weight-bolder text-center text-dark">MI FOTO DE PERFIL</p>
     <%= image_tag(@profile.foto.url, size: "200x200", class: "rounded rounded-circle mx-auto d-block" ) if @profile.foto? %>
     <hr>
     <p class="font-weight-bolder text text-dark">Actualizar foto de perfil</p>
     <div class="input-group mb-3">
     <%= f.file_field :foto%>    
     <%if @profile.errors[:foto].any? %>
        <p class="bg-danger"><%= @profile.errors[:foto].to_s[/\w([^"]*)/] %></p>
     <% end %>
  </div>
  <hr> 
  <br>
  <div class="card border-info mb-3 ">
  <h5 class="card-header text-white bg-info mb-3">Editar Datos Personales</h5>
  <div class="card-body">
  <div class="form-row">
    <div class="form-group col-md-6">
      <%= f.label :nombre %>
      <%= f.text_field :nombre, class: "form-control" %>
    </div>
    <div class="form-group col-md-6">
    <%= f.label :apellido %>
    <%= f.text_field :apellido, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
  <%= f.label :direccion %>
  <%= f.text_field :direccion, class: "form-control" %>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
    <%= f.label :ciudad %>
    <%= f.text_field :ciudad, class: "form-control" %>
    </div>
    <div class="form-group col-md-4">
        <%= f.label :estado %>
        <%= f.text_field :estado, class: "form-control" %>
    </div>
    <div class="form-group col-md-2">
        <%= f.label :zip %>
        <%= f.text_field :zip, class: "form-control" %>
    </div>
    <div class="form-group col-md-2">
        <%= f.submit "Actualizar", class: "btn btn-outline-success form-control" %>
    </div>
  </div>
  </div>
  </div>
<% end %>