<h1 class="h3 mb-2 text-gray-800 text-center">CATEGORIAS DE PRODUCTOS</h1>
<div>  
  <%= link_to new_product_path, {remote: true, class: "btn btn-outline-info btn-md"}  do %>
    <span>Agregar Producto</span>
  <% end %>
</div>
<br />
    <div class="table-responsive">
    <table class="table table-bordered table-hover" id="tablaProductos" width="100%" cellspacing="0">
        <thead class="thead-dark">
        <tr>
            <th>Imagen Producto</th>
            <th>Nombre producto</th>
            <th>Existencia</th>
            <th>Precio</th>
            <th>Categoria</th>
            <th>Proveedor</th>
            <th>Editar</th>
            <th>Eliminar</th>
        </tr>
        </thead>
        <tbody>
            <% @productos.each do |prod| %>
            <tr id="producto_<%= prod.id %>" >
                <td><%= image_tag(prod.imagen.url, size: "50x50", class: "rounded-circle") if prod.imagen? %></td>
                <td><%= prod.nombre %></td>
                <td><%= prod.existencia %></td>
                <td>$<%= prod.precio %></td>
                <td><%= prod.category != nil ? prod.category.nombre : "No tiene categoria" %></td>
                <td><%= prod.supplier != nil ? prod.supplier.nombre : "No tiene proveedor" %></td>
                <td>
                <%= link_to "editar", edit_product_path(prod), html_options = {class: "btn btn-outline-info btn-xs", remote: true} %>
                </td>
                <td>
                <%= link_to "Borrar", prod, remote: true, method: :delete, data: { confirm: "Â¿Borrar producto: #{prod.nombre}?"}, class: "btn btn-outline-danger btn-xs" %>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>
<%= render 'modal_productos' %>